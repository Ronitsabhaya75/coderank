{
  "name": "coderank",
  "displayName": "Coderank",
  "description": "Track your typing habbits from anywhere",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coderank.refreshLocal",
        "title": "Refresh local values",
        "icon": "$(refresh)"
      },
      {
        "command": "coderank.rankProgress",
        "title": "Check rank progress"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "coderank",
          "name": "Coderank"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Coderank configuration",
      "properties": {
        "coderank.refreshRate": {
          "type": "number",
          "default": 10,
          "description": "Refresh local values every X characters. Default is 10"
        },
        "coderank.characterDataRefreshRate": {
          "type:": "number",
          "default": 1000,
          "description": "Refresh character data every X characters."
        },
        "coderank.trackCharacters": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["local", "remote"]
          },
          "default": ["local", "remote"],
          "description": "Track the values of each typed/pasted character. This stores the amount of all characters typed. Default ['local', 'remote']"
        },
        "coderank.saveLocally": {
          "type": "boolean",
          "default": true,
          "description": "Save local values to local storage. If disabled, local values will not coordinate between different windows, and will be lost when the windows are closed"
        },
        "coderank.saveRemotely": {
          "type": "boolean",
          "default": true,
          "description": "If disabled, remote values will not be shown in the treeview, and stats will not be pushed nor pulled to and from GitHub"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "coderank.refreshLocal",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.rankProgress",
          "when": "view == coderank",
          "group": "inline"
        }
      ],
      "view/item/context": []
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
