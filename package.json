{
  "name": "coderank",
  "displayName": "Coderank",
  "description": "Track your typing habbits from anywhere",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coderank.refreshProject",
        "title": "Refresh local values",
        "icon": "$(refresh)"
      },
      {
        "command": "coderank.storeProject",
        "title": "Add project values to local storage",
        "icon": "$(desktop-download)"
      },
      {
        "command": "coderank.pushToRemote",
        "title": "Push local values to remote repo",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "coderank.sortCharacterData",
        "title": "Sort character data"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "coderank",
          "name": "Coderank"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Coderank configuration",
      "properties": {
        "coderank.refreshRate": {
          "type": "number",
          "default": 10,
          "description": "Refresh local values every X characters. Default is 10"
        },
        "coderank.characterDataRefreshRate": {
          "type:": "number",
          "default": 1000,
          "description": "Refresh character data every X characters."
        },
        "coderank.trackCharacters": {
          "type": "boolean",
          "default": "true",
          "description": "Track the values of each typed/pasted character."
        },
        "coderank.storeLocally": {
          "type": "boolean",
          "default": true,
          "description": "Save local values to local storage. If disabled, local values will not coordinate between different windows, and will be lost when the windows are closed"
        },
        "coderank.storeRemotely": {
          "type": "boolean",
          "default": true,
          "description": "If disabled, remote values will not be shown in the treeview, and stats will not be pushed nor pulled to and from GitHub"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "coderank.refreshProject",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.storeProject",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.pushToRemote",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.sortCharacterData",
          "when": "view == coderank",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
