{
  "name": "coderank",
  "displayName": "Coderank",
  "description": "Track your typing habbits from anywhere",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coderank.refreshProject",
        "title": "Refresh local values",
        "icon": "$(refresh)"
      },
      {
        "command": "coderank.storeProjectValues",
        "title": "Add project values to local storage",
        "icon": "$(desktop-download)"
      },
      {
        "command": "coderank.pushToRemote",
        "title": "Push local values to remote repo",
        "icon": "$(cloud-upload)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "coderank",
          "name": "Coderank"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Coderank configuration",
      "properties": {
        "coderank.refreshRate": {
          "type": "number",
          "default": 10,
          "description": "Refresh local values every X characters. Default is 10"
        },
        "coderank.characterDataRefreshRate": {
          "type:": "number",
          "default": 1000,
          "description": "Refresh character data every X characters."
        },
        "coderank.trackCharacters": {
          "type": "boolean",
          "default": "true",
          "description": "Track the values of each typed/pasted character."
        },
        "coderank.mode": {
          "type": "string",
          "enum": [
            "project",
            "local",
            "remote"
          ],
          "default": "remote",
          "description": "FIXME"
        },
        "coderank.autoStoreLocallyOnDocumentSave": {
          "type": "boolean",
          "default": true,
          "description": "Project values saved to local storage on document save"
        },
        "coderank.createLocalBackup": {
          "type": "boolean",
          "default": true,
          "description": "Save compressed copies of local files"
        },
        "coderank.loadLocalOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Read local values from storage when opening a new window"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "coderank.refreshProject",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.storeProjectValues",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.pushToRemote",
          "when": "view == coderank",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier src --write",
    "test": "vscode-test"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 100,
    "semi": true,
    "tabWidth": 4,
    "singleQuote": false
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  }
}
