{
  "name": "coderank",
  "displayName": "Coderank",
  "description": "Track your typing habbits from anywhere",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/reidspreiter/coderank.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "publisher": "reidspreiter",
  "license": "MIT",
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "rank",
    "code",
    "tracker",
    "coderank",
    "data",
    "type",
    "typing",
    "characters",
    "track"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coderank.refreshProject",
        "title": "Refresh project values",
        "icon": "$(refresh)"
      },
      {
        "command": "coderank.dumpProjectToLocal",
        "title": "Add project values to local storage",
        "icon": "$(desktop-download)"
      },
      {
        "command": "coderank.dumpLocalToRemote",
        "title": "Add local values to remote repository",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "coderank.loadBackup",
        "title": "Load backup file"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "coderank",
          "name": "Coderank"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Coderank configuration",
      "properties": {
        "coderank.refreshRate": {
          "type": "number",
          "default": 100,
          "description": "Automatically refresh project fields (not including `Characters Pressed`) every `X` characters. Set to 0 to disable automatic refresh. Default = 100"
        },
        "coderank.charRefreshRate": {
          "type:": "number",
          "default": 100,
          "description": "Automatically refresh project `Characters Pressed` every `X` characters. Set to 0 to disable automatic refresh. Default = 100"
        },
        "coderank.trackCharacters": {
          "type": "boolean",
          "default": "true",
          "description": "Track character values and populate a `Characters Pressed` field. Default = true"
        },
        "coderank.mode": {
          "type": "string",
          "enum": [
            "project",
            "local",
            "remote"
          ],
          "default": "remote",
          "description": "Toggle Coderank mode. Default = remote"
        },
        "coderank.autoStore": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save project fields on document save. Default = true"
        },
        "coderank.loadLocalOnStart": {
          "type": "boolean",
          "default": true,
          "description": "Load fields from local storage when a new window is opened. Default = true"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "coderank.refreshProject",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.dumpProjectToLocal",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.dumpLocalToRemote",
          "when": "view == coderank",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts --fix",
    "format": "prettier src --write",
    "test": "vscode-test"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 100,
    "semi": true,
    "tabWidth": 4,
    "singleQuote": false
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "simple-git": "^3.26.0"
  }
}
