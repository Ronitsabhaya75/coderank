{
  "name": "coderank",
  "displayName": "Coderank",
  "description": "Track your typing habbits from anywhere",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coderank.refreshProject",
        "title": "Refresh local values",
        "icon": "$(refresh)"
      },
      {
        "command": "coderank.dumpProjectToLocal",
        "title": "Add project values to local storage",
        "icon": "$(desktop-download)"
      },
      {
        "command": "coderank.dumpLocalToRemote",
        "title": "Add local values to remote repository",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "coderank.loadBackup",
        "title": "Load backup file"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "coderank",
          "name": "Coderank"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Coderank configuration",
      "properties": {
        "coderank.refreshRate": {
          "type": "number",
          "default": 10,
          "description": "Refresh local values every X characters\nDefault = 10\nSet to 0 to disable automatic refresh"
        },
        "coderank.characterDataRefreshRate": {
          "type:": "number",
          "default": 1000,
          "description": "Refresh character data every X characters\nDefault = 1000\nSet to 0 to disable automatic refresh"
        },
        "coderank.trackCharacters": {
          "type": "boolean",
          "default": "true",
          "description": "Track the amount of times each character has been pressed\nDefault = true"
        },
        "coderank.mode": {
          "type": "string",
          "enum": [
            "project",
            "local",
            "remote"
          ],
          "default": "remote",
          "description": "project: data is only stored until the given project window is closed\nlocal: data can be saved to local storage, allowing multiple open windows to coordinate. Backups of local data are created weekly and can be loaded if needed.\nremote: data can be pushed to a remote repository allowing multiple workstations to coordinate. Additionally, data in a remote repository can be presented to the public through solutions like GitHub Pages\nDefault = remote"
        },
        "coderank.autoStoreLocallyOnDocumentSave": {
          "type": "boolean",
          "default": true,
          "description": "Save project data to local storage when a document is saved\nDefault = true"
        },
        "coderank.loadLocalOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Read locally stored data when opening a new window\nDefault = true"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "coderank.refreshProject",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.dumpProjectToLocal",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.dumpLocalToRemote",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.loadBackup",
          "when": "view == coderank",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier src --write",
    "test": "vscode-test"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 100,
    "semi": true,
    "tabWidth": 4,
    "singleQuote": false
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "simple-git": "^3.26.0"
  }
}
