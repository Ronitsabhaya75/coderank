{
  "name": "coderank",
  "displayName": "Coderank",
  "description": "Track your typing habbits from anywhere",
  "version": "0.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/reidspreiter/coderank.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "publisher": "reidspreiter",
  "license": "MIT",
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "rank",
    "code",
    "tracker",
    "coderank",
    "data",
    "type",
    "typing",
    "characters",
    "track"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coderank.refreshProject",
        "title": "Refresh project data",
        "icon": "$(refresh)"
      },
      {
        "command": "coderank.dumpProjectToLocal",
        "title": "Add project data to local storage",
        "icon": "$(desktop-download)"
      },
      {
        "command": "coderank.dumpLocalToRemote",
        "title": "Add local data to remote repository",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "coderank.loadBackup",
        "title": "Load backup file"
      },
      {
        "command": "coderank.initializeWebViewer",
        "title": "Initialize web viewer"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "coderank",
          "name": "Coderank"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Coderank configuration",
      "properties": {
        "coderank.refreshRate": {
          "type": "number",
          "default": 100,
          "description": "Automatically refresh project data every `X` characters. Set to 0 to disable automatic refresh. Default = 100"
        },
        "coderank.saveCredentials": {
          "type": "boolean",
          "default": false,
          "description": "Save GitHub username and PAT. Default = false"
        },
        "coderank.trackCharacters": {
          "type": "boolean",
          "default": "true",
          "description": "Track character values and populate a `Characters Pressed` field. Default = true"
        },
        "coderank.autoStore": {
          "type": "boolean",
          "default": true,
          "description": "Automatically add project data to local storage on document save. Default = true"
        },
        "coderank.loadLocalOnStart": {
          "type": "boolean",
          "default": true,
          "description": "Load data from local storage when a new window is opened. Default = true"
        },
        "coderank.debug": {
          "type": "boolean",
          "default": false,
          "description": "Logs events to the console for debug and development purposes. Default = false"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "coderank.refreshProject",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.dumpProjectToLocal",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.dumpLocalToRemote",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.loadBackup",
          "when": "view == coderank",
          "group": "inline"
        },
        {
          "command": "coderank.initializeWebViewer",
          "when": "view == coderank",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run compile && npm run copy-assets",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts --fix",
    "format": "prettier src --write",
    "test": "vscode-test",
    "copy-assets": "copyfiles -u 2 src/web/src/index.html src/web/src/static/** out/web"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 100,
    "semi": true,
    "tabWidth": 4,
    "singleQuote": false
  },
  "devDependencies": {
    "@types/mocha": "10.0.7",
    "@types/node": "20.x",
    "@types/sinon": "17.0.3",
    "@types/vscode": "1.92.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@vscode/test-cli": "0.0.9",
    "@vscode/test-electron": "2.4.0",
    "copyfiles": "2.4.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-prettier": "5.2.1",
    "prettier": "3.3.3",
    "sinon": "19.0.2",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "simple-git": "3.26.0",
    "zod": "3.23.8"
  }
}